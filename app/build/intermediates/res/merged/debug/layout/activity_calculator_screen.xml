<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calculator_screen"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.devicefulsoftware.harborcalc_free.calculatorScreen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layerScroll">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/layer_calcScreen">

                <TextView
                    android:text="0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_calc"
                    android:textAlignment="textEnd"
                    android:layout_gravity="end"
                    android:textSize="48sp"
                    android:paddingRight="10dp"
                    android:background="?attr/colorButtonNormal"
                    android:paddingTop="5dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/layer_fifthRow">

                <Button
                    android:text="("
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_leftParen"
                    android:layout_weight="1"
                    android:onClick="buttonleftParen_click"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />

                <Button
                    android:text=")"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_rightParen"
                    android:layout_weight="1"
                    android:onClick="buttonrightParen_click"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />

                <Button
                    android:text="DEL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_backspace"
                    android:layout_weight="1"
                    android:onClick="buttonBackspace_click"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />

                <Button
                    android:text="AC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_ac"
                    android:layout_weight="1"
                    android:onClick="buttonAc_click"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/layer_fourthRow">

                <Button
                    android:text="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_7"
                    android:layout_weight="1"
                    android:onClick="button7_click"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />

                <Button
                    android:text="8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_8"
                    android:layout_weight="1"
                    android:onClick="button8_click"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />

                <Button
                    android:text="9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_9"
                    android:layout_weight="1"
                    android:onClick="button9_click"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />

                <Button
                    android:text="/"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_divide"
                    android:layout_weight="1"
                    android:onClick="buttonDivide_click"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/layer_thirdRow">

                <Button
                    android:text="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_4"
                    android:layout_weight="1"
                    android:onClick="button4_click"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />

                <Button
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_5"
                    android:layout_weight="1"
                    android:onClick="button5_click"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />

                <Button
                    android:text="6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_6"
                    android:layout_weight="1"
                    android:onClick="button6_click"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />

                <Button
                    android:text="*"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_multiply"
                    android:layout_weight="1"
                    android:onClick="buttonMultiply_click"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/layer_secondRow">

                <Button
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_1"
                    android:layout_weight="1"
                    android:onClick="button1_click"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />

                <Button
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_2"
                    android:layout_weight="1"
                    android:onClick="button2_click"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />

                <Button
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_3"
                    android:layout_weight="1"
                    android:onClick="button3_click"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />

                <Button
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_minus"
                    android:layout_weight="1"
                    android:onClick="buttonMinus_click"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/layer_firstRow">

                <Button
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_0"
                    android:layout_weight="1"
                    android:onClick="button0_click"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />

                <Button
                    android:text="."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_decimal"
                    android:layout_weight="1"
                    android:onClick="buttonDecimal_click"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />

                <Button
                    android:text="="
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_equals"
                    android:layout_weight="1"
                    android:onClick="buttonEquals_click"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />

                <Button
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_plus"
                    android:layout_weight="1"
                    android:onClick="buttonPlus_click"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layerLogo">

                <TextView
                    android:text="There should be ads displayed here."
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/textView"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:textAlignment="viewStart"
                    android:layout_gravity="start"
                    android:paddingTop="12dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/imageLogo"
                    android:layout_weight="1"
                    android:layout_height="80dp"
                    android:onClick="holdLogo"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/layer_Ads">

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
